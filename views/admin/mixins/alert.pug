mixin alert-success(time)
    -   if (messages.success)
        div(
            class="alert alert-success"
            show-alert
            data-time=time
        )   <span>#{messages.success}</span> <span class="span-x" close-alert>x</span>

mixin alert-error(time)
    -   if (messages.error)
        div(
            class="alert alert-danger"
            show-alert
            data-time=time
        )   <span>#{messages.error}</span> <span class="span-y" close-alert>x</span>